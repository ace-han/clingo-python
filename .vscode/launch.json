{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Python: Debug Django Tests",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/manage.py",
        "args": ["test"],
        "purpose": ["debug-test"],
        "console": "internalConsole",
        "justMyCode": false,
        "subProcess": true,
        "django": true
      },
    {
      "name": "Python: Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:500"],
      "justMyCode": false,
      "subProcess": true,
      "django": true
    },
    {
      "name": "Python: Django shell",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["shell"],
      "justMyCode": false,
      "subProcess": true,
      "django": true
    },
    {
      "name": "Python: makemigrations material",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["makemigrations", "material"],
      "justMyCode": false,
      "subProcess": true,
      "django": true
    },
    {
      "name": "youtube-dl command",
      "type": "debugpy",
      "request": "launch",
      "program": "${command:python.interpreterPath}/../youtube-dl",
      "args": [
        "-F",
        "--verbose",
        "https://www.youtube.com/watch?v=2Cou2nW7VE0"
      ],
      "justMyCode": false
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true
    }
  ]
}
